import os
import time


def outside():
    mars_variable = ["north", "east", "west"]
    mars_choice = ""
    while mars_choice not in mars_variable:
        print ("")
        print ("You exit the ship...")
        time.sleep(3)
        print ("")
        print ("Throughout the storm you manage to make out three paths ahead... ")
        time.sleep(2)
        print ("")
        print ("North leading towards the entrance to the compound.")
        print ("")
        print ("West leading towards what looks like buildings generators. ")
        print ("")
        print ("East leading towards a large stack on storage containers.")
        print ("")

        mars_choice = str(input("Where would you like to go? "))
    print ("")
    print ("You go " + mars_choice)

    if mars_choice == mars_variable[0]:
        marsnorth()
    elif mars_choice == mars_variable[1]:
        marseast()
    elif mars_choice == mars_variable[2]:
        marswest()

def marsnorth():
    print ("")
    print ("approaching the compound you notice a small trail of blood leading east towards the containers... ")
    time.sleep(6)
    print ("")
    print ("Maynard: Im not sure whats going on here but this doesnt look good...")
    time.sleep(2)
    print ("")
    print ("Barrow: Keep your eyes peeled for anything unusual.")
    time.sleep(3)
    print ("")
    print ("You continue north towards the compound doors...")
    time.sleep(2)
    print ("")
    print ("It seems that the power is out and the door requires a key.")
    print ("")
    northinput = ""
    northinput = input ("Where would you like to go? ")
    if northinput == ("north"):
        print ("")
        print ("It seems that the power is out and the door requires a key.")
        print ("")
    elif northinput == ("east"):
        print ("")
        print ("Approaching the containers you notice the small trail of blood you spotted earlier increase in size and head off into one of the containers...")
        time.sleep(4)
        print ("")
        print ("Maynard: The blood looks to be human")
        print ("")
        eastinput = ""
        eastinput = input ("Do you want to continue? ")
        if eastinput == ("yes"):
            print ("")
            print ("You enter the container...")
            time.sleep(4)
            print ("Entering the container the room is filled with bile and the stench of death in present in the air...")
            print ("")
            time.sleep (4)
            print ("")
            print ("Maynard: You guys better come take a look at this...")
            time.sleep(3)
            print ("")
            print ("Lying on the ground, sandwitched between two cabinets.. is the rotting corpse of one of the scientists working at the facility...")
            time.sleep(3)
            print ("")
            time.sleep(3)
            print ("Maynard: What do you want to do with him? ")
            time.sleep(2)
            print ("")
            print ("Barrow: Why dont you 'search' him for any evidence? ")
            print ("")
            deadbodysearch = ""
            deadbodysearch = input ("What would you like to do? ")
            if deadbodysearch == ("search") or ("search body"):
                print ("")
                print ("Upon searching the body you notice large claw marks leading from the victims abdomen to his neck...")
                time.sleep(4)
                print ("")
                print ("You also find a keycard...")
                print ("")
                time.sleep(3)
                print ("Barrow: Good work, lets head over to the west side to see if we can do anything about the power...")
                time.sleep(4)
                print ("")
                print ("You go west...")
                print ("")
                print ("As the dust and debris start to clear you notice solar pannels connected to a generator....")
                print ("")
                time.sleep(5)
                print ("Bjorn speaks to you through the intercom..")
                time.sleep(3)
                print ("")
                print ("Bjorn: It seems that the debris from the storm has stopped the solar pannels from recieving any light")
                time.sleep(4)
                print ("")
                print ("Bjorn: try clearing it to turn the power back on. ")
                print ("")
                solar1 = ""
                solar1 = input ("What would you like to do? ")
                if solar1 == ("clear") or ("clear pannel"):
                    print ("")
                    print ("You clear the debris from the solar pannel and you start to hear the generators kick in.")
                    time.sleep(5)
                    print ("")
                    print ("Barrow: Good work! Now lets head over to the main doors and try and enter the facility.")
                    time.sleep(5)

